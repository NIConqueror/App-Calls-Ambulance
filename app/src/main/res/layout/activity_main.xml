<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#8CB0D3FD">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вызов скорой помощи"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="28sp"
            android:textColor="@android:color/holo_red_dark" android:id="@+id/textView2"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:layout_marginBottom="425dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <TextView
            android:text="103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="40sp"
            android:textColor="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:fontFamily="@font/noto_sans_bold"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="45dp"/>
    <Button
            android:text="Вызвать"
            android:layout_width="206dp"
            android:layout_height="51dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="112dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:fontFamily="@font/noto_sans_bold"
            app:layout_constraintHorizontal_bias="0.496" android:background="#3A8DFD" android:textColor="#F8F8F8"
    />
    <Button
            android:text="Войти"
            android:layout_width="206dp"
            android:layout_height="51dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/noto_sans_bold"
            app:layout_constraintHorizontal_bias="0.496" android:background="#3A8EFE" android:textColor="#FFFFFF"/>
    <TextView
            android:text="или"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            android:fontFamily="@font/noto_sans_bold" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.75"/>
    <TextView
            android:text="(Нет аккаунта? Нажмите сюда - регистрация)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:textSize="8sp" android:fontFamily="@font/noto_sans_bold"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="232dp" app:srcCompat="@mipmap/ic_launcher_ambulance"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            android:layout_marginLeft="45dp" android:layout_marginStart="45dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.59000003"/>
    <ImageView
            android:layout_width="177dp"
            android:layout_height="176dp" app:srcCompat="@mipmap/ic_launcher_ambulbrig"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.2"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.51"/>
    <ImageView
            android:layout_width="131dp"
            android:layout_height="125dp" app:srcCompat="@mipmap/ic_launcher_ambulbr"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.43"/>

</androidx.constraintlayout.widget.ConstraintLayout>